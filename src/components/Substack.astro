---
import '../styles/substack-embed.css';
---

<div class="substack-container">
  <h2 class="newsletter-title">Stay Updated</h2>
  <iframe
    src="https://bgtj.substack.com/embed"
    class="substack-embed"
    title="Subscribe to BGTJ"
    loading="lazy"
  ></iframe>
</div>

<script>
  // Function to inject styles into the iframe
  function injectStyles(iframe: HTMLIFrameElement) {
    iframe.addEventListener('load', () => {
      try {
        const iframeDoc = iframe.contentDocument || iframe.contentWindow?.document;
        if (!iframeDoc) return;
        
        const styleSheet = document.createElement('style');
        styleSheet.textContent = `
          .embed-page {
            background: transparent !important;
            color: var(--text-color) !important;
          }
          .embed-page * {
            font-family: var(--font-family) !important;
            color: var(--text-color) !important;
          }
          .embed-page input,
          .embed-page button {
            background: var(--background-color) !important;
            border: 1px solid var(--border-color) !important;
            color: var(--text-color) !important;
          }
          .embed-page button[type="submit"] {
            background: var(--accent-color) !important;
            color: var(--text-on-accent) !important;
            border: none !important;
            padding: 0.5rem 1rem !important;
            border-radius: 4px !important;
            cursor: pointer !important;
            transition: opacity 0.2s ease !important;
          }
          .embed-page button[type="submit"]:hover {
            opacity: 0.9 !important;
          }
        `;
        iframeDoc.head.appendChild(styleSheet);
      } catch (e) {
        console.error('Could not inject styles into iframe:', e);
      }
    });
  }

  // Get the iframe and inject styles
  const iframe = document.querySelector('.substack-embed') as HTMLIFrameElement;
  if (iframe) {
    injectStyles(iframe);
  }
</script>

<style>
  .substack-container {
    width: 100%;
    height: 100%;
    min-height: 300px;
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    background: var(--background-color);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .newsletter-title {
    font-family: 'Smokum', serif;
    font-size: 4rem;
    font-weight: 400;
    letter-spacing: -0.02em;
    line-height: 1.1;
    text-align: center;
    color: var(--color-text);
    margin: 0;
    text-transform: uppercase;
  }

  .substack-embed {
    width: 100%;
    height: 100%;
    border: none;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .newsletter-title {
      font-size: 3.5rem;
    }
  }

  @media (max-width: 480px) {
    .newsletter-title {
      font-size: 3rem;
    }
  }
</style> 