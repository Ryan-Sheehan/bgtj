---
export interface Props {
  type: 'untitled';
  embedCode?: string;
}
const { embedCode } = Astro.props;
---
<div class="embed-container">
  <div class="embed-content">
    <iframe
      style="border-radius: 24px; border: none;"
      src={`https://untitled.stream/embed/${embedCode}`}
      width="100%"
      height="344"
      allowfullscreen
      allow="picture-in-picture"
      loading="lazy"
      class="embed-iframe"
    ></iframe>
  </div>
</div>

<style>
.embed-container {
  display: grid;
  grid-column: 1 / -1;
  grid-template-columns: subgrid;
  justify-items: center;
  align-items: center;
  width: 100%;
  padding: 4rem 0;
}

.embed-content {
  grid-column: 2 / -2;
  display: flex;
  justify-content: center;
  align-items: center;
  max-width: 900px;
  width: 100%;
}

.embed-iframe {
  width: 100%;
  max-width: 900px;
  border: none;
  background: transparent;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .embed-content {
    grid-column: 1 / -1;
    max-width: 100%;
    padding: 0 1rem;
  }
}

@media (max-width: 480px) {
  .embed-content {
    padding: 0 0.5rem;
  }
}
</style> 