---
export interface Props {
  type: 'untitled';
  embedCode?: string;
}
const { embedCode } = Astro.props;
---
<div class="embed-row">
  <iframe
    style="border-radius: 24px"
    src={`https://untitled.stream/embed/${embedCode}`}
    width="100%"
    height="344"
    allowfullscreen
    allow="picture-in-picture"
    frameborder="0"
    loading="lazy"
    class="embed-iframe"
  ></iframe>
</div>
<style>
.embed-row {
  grid-column: 3 / 14;
  width: 100%;
  max-width: 100%;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}
.embed-iframe {
  width: 100%;
  max-width: 600px;
  border: none;
  background: transparent;
}
</style> 