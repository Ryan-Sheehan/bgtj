---
const pathname = Astro.url?.pathname || '';
import Boys from '../assets/boys.png';
import { getStore } from '../lib/sanityClient';
import { Image } from 'astro:assets';

const store = await getStore();
const storeLink = store?.storeLink;
---
<header class="header">
  <nav class="header-nav">
    <div class="nav-grid">
      <div class="logo-row">
        <a href="/" class="logo-link" aria-label="Home" data-home-link>
          <Image 
            src={Boys} 
            alt="Boys" 
            class="header-logo"
            width={100}
            height={67}
            loading="eager"
            decoding="sync"
          />
        </a>
      </div>
      <div class="nav-row">
        <a href="/music" class={pathname.startsWith('/music') ? 'active nav-link' : 'nav-link'}>music</a>
        <a href="/shows" class={pathname.startsWith('/shows') ? 'active nav-link' : 'nav-link'}>shows</a>
        <a href="/videos" class={pathname.startsWith('/videos') ? 'active nav-link' : 'nav-link'}>videos</a>
        {storeLink && <a href={storeLink} class={pathname.startsWith('/store') ? 'active nav-link' : 'nav-link'}>store</a>}
        <a href="/about" class={pathname.startsWith('/about') ? 'active nav-link' : 'nav-link'}>about</a>
      </div>
    </div>
  </nav>
  <script>
    // Prevent page reload when clicking logo on home page
    document.querySelector('[data-home-link]')?.addEventListener('click', (e) => {
      if (window.location.pathname === '/') {
        e.preventDefault();
      }
    });
  </script>
  <style>
    .header {
      width: 100%;
      padding: 1.2rem 0 1.2rem 0;
      display: flex;
      justify-content: center;
      align-items: center;
      background: var(--color-bg);
      position: sticky;
      top: 0;
      z-index: 100;
      overflow-x: auto;
      box-sizing: border-box;
    }
    .header-nav {
      width: 100%;
      overflow-x: auto;
      box-sizing: border-box;
    }
    .nav-grid {
      display: grid;
      grid-template-columns: repeat(14, 1fr);
      align-items: center;
      gap: 0;
      width: 100%;
      padding: 0 2.5vw;
      min-width: 0;
      box-sizing: border-box;
    }
    .logo-row {
      grid-column: 1 / -1;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .nav-row {
      grid-column: 14 / 15;
      display: grid;
      grid-template-columns: repeat(5, 1fr);
      align-items: end;
      width: 100%;
    }
    .logo-link {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .header-logo {
      width: 100%;
      max-width: 100px;
      border-radius: 8px;
      box-shadow: inset 0 0 0 1px rgba(var(--color-text-rgb, 24,24,27), 0.3);
      display: block;
    }
    .nav-link {
      justify-self: end;
      align-self: end;
      display: block;
      text-align: right;
      color: var(--color-text);
      text-decoration: none;
      font-size: 1rem;
      font-weight: 400;
      letter-spacing: 0.02em;
      line-height: 1;
      transition: color 0.2s;
      padding-bottom: 2px;
      font-family: 'Courier Prime', monospace;
      text-transform: uppercase;
      color: inherit;
    }
    .nav-link:hover {
      background-color: rgba(var(--color-text-rgb, 24,24,27), 0.2);
      color: var(--color-text);
      opacity: 1;
    }
    .nav-link.active {
      text-decoration: underline;
      background-color: rgba(var(--color-text-rgb, 24,24,27), 0.2);
      opacity: 1;
    }
    .nav-link:hover {
      color: #a0a0ff;
    }
    @media (min-width: 701px) {
      .logo-row, .nav-row {
        display: contents;
      }
      .logo-link {
        grid-column: 1 / 6;
        grid-row: 1 / 4;
        justify-content: start;
      }
      .nav-link {
        grid-column-end: span 2;
        justify-self: end;
      }
      a[href="/music"] { grid-column: 9 / 11; }
      a[href="/shows"] { grid-column: 10 / 12; }
      a[href="/videos"] { grid-column: 11 / 13; }
      a[href="/store"] { grid-column: 12 / 13; grid-row: 2; }
      a[href="/about"] { grid-column: 13 / 14; grid-row: 2; }
    }
    @media (max-width: 700px) {
      .header {
        height: auto;
        min-height: 0;
      }
      .nav-grid {
        align-items: stretch;
        min-height: 0;
      }
      .logo-row {
        grid-row: 1;
        grid-column: 1 / 8;
        margin-bottom: 0;
        display: flex;
        justify-content: flex-start;
        align-items: start;
        height: 100%;
        min-height: 0;
      }
      .header-logo {
        width: 100%;
        max-width: 240px;
        min-height: 0;
        min-width: 0;
        display: block;
      }
      .nav-row {
        grid-row: 1;
        grid-column: 14 / 16;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        width: 100%;
        padding-right: 0.5rem;
        gap: 0.2rem;
        height: 100%;
        min-height: 0;
      }
      .nav-link {
        width: auto;
        justify-self: end;
        align-self: flex-end;
        text-align: right;
        font-size: 1rem;
        padding-bottom: 0.5rem;
      }
    }
  </style>
</header> 