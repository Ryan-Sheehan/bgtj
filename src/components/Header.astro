---
const pathname = Astro.url?.pathname || '';
import BgtjLogo from './BgtjLogo.astro';
---
<header class="header">
  <nav class="header-nav">
    <div class="nav-container">
      <a href="/" class="logo-link" aria-label="Home">
        <BgtjLogo />
      </a>
      <a href="/music" class={pathname.startsWith('/music') ? 'active' : ''}>music</a>
      <a href="/shows" class={pathname.startsWith('/shows') ? 'active' : ''}>shows</a>
      <a href="/videos" class={pathname.startsWith('/videos') ? 'active' : ''}>videos</a>
      <a href="/store" class={pathname.startsWith('/store') ? 'active' : ''}>store</a>
      <a href="/about" class={pathname.startsWith('/about') ? 'active' : ''}>about</a>
    </div>
  </nav>
  <style>
    .header {
      width: 100%;
      padding: 1.2rem 0 1.2rem 0;
      display: flex;
      justify-content: center;
      align-items: center;
      background: var(--color-bg);
      /* border-bottom: 1px solid var(--color-border); */
      position: sticky;
      top: 0;
      z-index: 100;
      overflow-x: auto;
      box-sizing: border-box;
    }
    .header-nav {
      width: 100%;
      overflow-x: auto;
      box-sizing: border-box;
    }
    .nav-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: 2.5rem;
      width: 100%;
      padding: 0 2.5vw;
      min-width: 0;
      box-sizing: border-box;
    }
    .logo-link {
      display: flex;
      align-items: center;
      margin-right: 1.5rem;
    }
    .header-logo {
      height: 2.2rem;
      width: auto;
      display: block;
    }
    .header a {
      color: var(--color-text);
      text-decoration: none;
      font-size: 1.1rem;
      font-weight: 600;
      letter-spacing: 0.04em;
      transition: color 0.2s;
      border-bottom: 2px solid transparent;
      padding-bottom: 2px;
    }
    .header a.active {
      border-bottom: 2px solid var(--color-text) !important;
    }
    .header a:hover {
      color: #a0a0ff;
    }
  </style>
</header> 