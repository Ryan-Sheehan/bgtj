---
import type { SocialLinks } from '../types/sanity.types';

export interface Props {
	title?: string;
	description?: string;
	socialLinks?: SocialLinks;
}

const { title = 'Stay Updated', description = 'Get the latest news and updates from Boys Go To Jupiter', socialLinks } = Astro.props;
---

<footer class="footer">
	<div class="footer-content">
		<div class="footer-newsletter">
			<h3 class="newsletter-title">{title}</h3>
			<p class="newsletter-description">{description}</p>
			<div data-supascribe-embed-id="572252791967" data-supascribe-subscribe class="newsletter-embed"></div>
		</div>
		{socialLinks && (
			<ul class="social-links">
				{socialLinks?.instagram && (
					<li><a href={socialLinks.instagram} target="_blank" rel="noopener noreferrer">IG</a></li>
				)}
				{socialLinks?.tiktok && (
					<li><a href={socialLinks.tiktok} target="_blank" rel="noopener noreferrer">Tiktok</a></li>
				)}
				{socialLinks?.spotify && (
					<li><a href={socialLinks.spotify} target="_blank" rel="noopener noreferrer">Spotify</a></li>
				)}
				{socialLinks?.youtube && (
					<li><a href={socialLinks.youtube} target="_blank" rel="noopener noreferrer">Youtube</a></li>
				)}
			</ul>
		)}
	</div>
</footer>

<style>
	/* ===== FOOTER STYLING ===== */
	.footer {
		background: var(--color-bg);
		margin-top: 4rem;
		padding: 4rem 0 0 0;
		overflow: visible;
	}
	
	.footer-content {
		display: grid;
		grid-template-columns: repeat(14, 1fr);
		width: 100%;
		padding: 0 2.5vw;
		box-sizing: border-box;
		overflow: visible;
	}
	
	.footer-newsletter {
		grid-row: 1;
		grid-column: 2 / -2;
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
		max-width: 500px;
		margin: 0 auto;
		width: 100%;
		overflow: visible;
		min-height: auto;
	}
	
	.newsletter-title {
		margin: 0 0 0.5rem 0;
	}
	
	.newsletter-description {
		font-size: 1.125rem;
		color: var(--color-text);
		opacity: 0.8;
		margin: 0 0 2rem 0;
		line-height: 1.4;
        max-width: 400px;
	}
	
	.newsletter-embed {
		width: 100%;
		max-width: 400px;
		overflow: visible;
		padding-bottom: 1rem;
	}
	
	/* Override Supascribe styles to match site design */
	:global([data-supascribe-subscribe]) {
		background: transparent !important;
		border: none !important;
		font-family: 'EB Garamond', serif !important;
		overflow: visible !important;
		height: auto !important;
		min-height: auto !important;
		max-height: none !important;
		position: relative !important;
	}
	
	:global([data-supascribe-subscribe] *) {
		overflow: visible !important;
		height: auto !important;
		min-height: auto !important;
		max-height: none !important;
	}
	
	:global([data-supascribe-subscribe] input) {
		background: transparent !important;
		border: 1px solid var(--color-text) !important;
		border-radius: 0 !important;
		color: var(--color-text) !important;
		padding: 0.75rem 1rem !important;
		font-size: 1rem !important;
		font-family: 'EB Garamond', serif !important;
		width: 100% !important;
		box-sizing: border-box !important;
	}
	
	/* Target the actual input element */
	:global(input[type="email"]) {
		color: var(--color-text) !important;
	}
	
	:global(input[type="email"]::placeholder),
	:global([data-supascribe-subscribe] input::placeholder) {
		color: var(--color-text) !important;
		opacity: 0.6 !important;
		-webkit-text-fill-color: var(--color-text) !important;
	}
	
	:global(input[type="email"]::-webkit-input-placeholder),
	:global([data-supascribe-subscribe] input::-webkit-input-placeholder) {
		color: var(--color-text) !important;
		opacity: 0.6 !important;
		-webkit-text-fill-color: var(--color-text) !important;
	}
	
	:global(input[type="email"]::-moz-placeholder),
	:global([data-supascribe-subscribe] input::-moz-placeholder) {
		color: var(--color-text) !important;
		opacity: 0.6 !important;
		-webkit-text-fill-color: var(--color-text) !important;
	}
	
	:global(input[type="email"]:-ms-input-placeholder),
	:global([data-supascribe-subscribe] input:-ms-input-placeholder) {
		color: var(--color-text) !important;
		opacity: 0.6 !important;
		-webkit-text-fill-color: var(--color-text) !important;
	}
	
	:global([data-supascribe-subscribe] button) {
		background: transparent !important;
		border: 1px solid var(--color-text) !important;
		border-radius: 0 !important;
		color: var(--color-text) !important;
		padding:  1rem 2.5rem !important;
		font-size: 1rem !important;
		font-weight: 400 !important;
		font-family: 'Courier Prime', monospace !important;
		text-transform: uppercase !important;
		letter-spacing: 0.02em !important;
		cursor: pointer !important;
		transition: opacity 0.2s ease !important;
		margin-top: 1rem !important;
		margin-bottom: 1rem !important;
		box-sizing: border-box !important;
	}
	
	:global([data-supascribe-subscribe] button:hover) {
		opacity: 0.8 !important;
	}

	.social-links {
		grid-row: 2;
		grid-column: 1 / -1;
		display: grid;
		grid-template-columns: repeat(14, 1fr);
		list-style: none;
		display: flex;
		justify-content: flex-end;
		gap: 2rem;
		padding: 1rem 2.5vw 1rem 2.5vw;
		margin: 4rem -2.5vw 0 -2.5vw;
		background: #d4c1b6;
		border-top: 1px solid rgba(var(--color-text-rgb), 1);
	}
	
	.social-links a {
		color: var(--color-text);
		text-decoration: none;
		font-family: 'Courier Prime', monospace;
		text-transform: uppercase;
	}
	
	.social-links a:hover {
	  background-color: rgba(var(--color-text-rgb, 24,24,27), 0.2);
      color: var(--color-text);
      opacity: 1;
	}
	
	/* Responsive adjustments */
	@media (max-width: 412px) {
		.footer-newsletter {
			grid-column: 1 / -1;
			align-items: flex-start;
			text-align: left;
		}
		
		.newsletter-description {
			font-size: 1rem;
			text-align: left;
		}

		.newsletter-embed {
			max-width: none;
		}

		.social-links {
			grid-column: 1 / -1;
			grid-row: 2;
			justify-content: center;
			gap: 2rem;
		}
	}
	
	@media (max-width: 480px) {
		.footer {
			margin-top: 2rem;
		}
	}
</style> 