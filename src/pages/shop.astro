---
import Layout from '../layouts/Layout.astro';
import { getClient, urlFor } from '../lib/sanityClient';
import { productsQuery } from '../lib/queries';
import type { Product } from '../types/product';

const products: Product[] = await getClient().fetch(productsQuery);
---

<Layout>
  <div class="products-list">
    {products.map((product: Product) => {
      const imageUrl = product.photo ? urlFor(product.photo).width(800).height(800).fit('crop').url() : '';
      return (
        <div class="product-item">
          <a href={product.externalLink} target="_blank" rel="noopener noreferrer">
            {imageUrl && <img src={imageUrl} alt={product.title} class="product-image" loading="lazy" />}
            <h2 class="product-title">{product.title}</h2>
          </a>
        </div>
      );
    })}
  </div>
</Layout>

<style>
.products-list {
  display: grid;
  grid-column: 1 / -1;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
  width: 100%;
  padding: 3rem 0;
  margin: 0;
  list-style: none;
}

.product-item {
  width: 100%;
  min-width: 0;
  text-align: center;
}

.product-item a {
  text-decoration: none;
  color: inherit;
}

.product-image {
  width: 100%;
  aspect-ratio: 1 / 1;
  object-fit: cover;
  display: block;
  border-radius: 12px;
}

.product-title {
  margin-top: 0.5rem;
  font-family: 'Courier Prime', monospace;
  font-size: 1rem;
  font-weight: 400;
  text-transform: uppercase;
  letter-spacing: -0.02em;
}

@media (min-width: 900px) {
  .products-list {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (min-width: 1200px) {
  .products-list {
    grid-template-columns: repeat(4, 1fr);
  }
}

</style>