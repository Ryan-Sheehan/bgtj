---
import Layout from '../layouts/Layout.astro';
import { getClient, urlFor } from '../lib/sanityClient';
import { productsQuery } from '../lib/queries';
import type { Product } from '../types/product';

const products: Product[] = await getClient().fetch(productsQuery);
---

<Layout>
  <ul class="products-list">
    {products.map((product: Product) => {
      const imageUrl = product.photo ? urlFor(product.photo).width(800).height(800).fit('crop').url() : '';
      return (
        <li class="product-item">
          <a href={product.externalLink} target="_blank" rel="noopener noreferrer">
            {imageUrl && <img src={imageUrl} alt={product.title} class="product-image" loading="lazy" />}
            <h2 class="product-title">{product.title}</h2>
          </a>
        </li>
      );
    })}
  </ul>
</Layout>

<style>
.products-list {
  display: grid;
  grid-column: 1 / -1;
  grid-template-columns: subgrid;
  gap: 2rem;
  width: 100%;
  padding: 3rem 0;
  margin: 0;
  list-style: none;
}

.product-item {
  grid-column: span 3;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.product-item a {
  text-decoration: none;
  color: inherit;
}

.product-image {
  width: 100%;
  aspect-ratio: 1 / 1;
  object-fit: cover;
  border-radius: 16px;
}

.product-title {
  margin-top: 1rem;
  font-size: 1.2rem;
  line-height: 1.2;
  font-family: 'EB Garamond', serif;
}

@media (max-width: 700px) {
  .product-item {
    grid-column: 1 / -1;
  }
}
</style>